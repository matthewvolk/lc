{
  "compilerOptions": {
    "noEmit": true,

    "target": "es2022",
    "module": "preserve",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "allowJs": true,
    "resolveJsonModule": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
